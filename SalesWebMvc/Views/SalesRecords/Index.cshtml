
@{
    ViewData["Title"] = "Index";
}
<h3>Sales Records</h3>
<hr />
<div class="row">
    <div class="col-lg-4">
        <form  class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-3 control-label">Min Date</label>
                    <div class="col-lg-9">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-3 control-label">Max Date</label>
                    <div class="col-lg-9">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="col-lg-4 col-lg-offset-3">
                    <button type="submit" class="btn btn-default btn-info">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-4">
        <form asp-action="GroupingSearch" class="form-horizontal">
            <fieldset>
                <legend>Grouping Search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-3 control-label">Min Date</label>
                    <div class="col-lg-9">
                        <input type="date" class="form-control" name="minDate" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-3 control-label">Max Date</label>
                    <div class="col-lg-9">
                        <input type="date" class="form-control" name="maxDate" />
                    </div>
                </div>
                <div class="col-lg-4 col-lg-offset-3">
                    <button type="submit" value="submit" class="btn btn-info">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
